extends ../../layouts/default.pug 

block main
    .user
        .container.my-5 
            .row.justify-content-center
                .col-8 
                    h2(class="text-center user-title") Lấy lại mật khẩu
                    form(
                        action=`/user/password/forgot`
                        method="POST"
                    )
                        .input-group.mb-3.mt-4
                            .input-group-prepend
                                span.input-group-text#email
                                    i.fa-regular.fa-envelope
                            input.form-control(
                                type="email" 
                                placeholder="Email" 
                                aria-label="Email" 
                                aria-describedby="email"
                                name="email"
                                required
                            )
                        div(class="form-group")
                            button(
                                type="submit"
                                class="button-user"
                            ) Gửi mail xác nhận