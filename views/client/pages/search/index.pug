extends ../../layouts/default.pug

block main 
    .search-detail
        .container.my-5
            .row 
                .col-12.px-0.d-flex.align-items-center
                    i.fa-solid.fa-magnifying-glass.mr-1
                    h2.search-detail-title Kết quả tìm kiếm

            if(products.length > 0)   
                .row
                    each item in products
                        .col-xl-3.col-lg-3.col-md-6.col-sm-6.col-12
                            a.product-item(href=`/products/detail/${item.slug}`)
                                .product-image.text-center
                                    img(src=item.thumbnail alt=item.title)
                                h3.product-name #{item.title}
                                .product-price
                                    .product-price-new #{item.priceNew.toLocaleString('vi-VN')}đ
                                    .product-price-old #{item.price.toLocaleString('vi-VN')}đ
                                .product-coupon Không phí chuyển đổi khi trả góp 0% qua thẻ tín dụng kỳ hạn 3-6 tháng
                                .product-star
                                    i.fa-solid.fa-star
                                    i.fa-solid.fa-star
                                    i.fa-solid.fa-star
                                    i.fa-solid.fa-star
                                    i.fa-solid.fa-star
                                .product-left Giảm #{item.discountPercentage}%
                                .product-right Trả góp 0%
            else 
                .search-noresult
                    .row
                        .col-12
                            .search-noresult-title Kết quả tìm kiếm
                            .search-noresult-desc
                                | Rất tiếc, Chúng tôi không tìm thấy kết quả nào phù hợp với từ khoá 
                                span "#{keyword}"
                            .search-noresult-request
                                .request-title Để tìm được kết quả chính xác hơn, bạn vui lòng:
                                ul
                                    li Kiểm tra lỗi chính tả của từ khóa đã nhập
                                    li Thử lại bằng từ khóa khác
                                    li Thử lại bằng những từ khóa tổng quát hơn
                                    li Thử lại bằng những từ khóa ngắn gọn hơn
                            a.success-back(href="/") Quay lại trang chủ


