extends ../../layouts/default.pug 

block main 

    h1(class="mb-4") Thêm sản phẩm mới

    form(
        action=`${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
                span(style="color:red; margin-left:2px") *
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required 
            )
        div(class="form-group")
            label(for="product_category_id") Danh mục
                span(style="color:red; margin-left:2px") *
            select(
                name="product_category_id"
                id="product_category_id"
                class="form-control"
            ) 
                option(value="") -- Chọn danh mục --
                option(value="Iphone") Iphone
                option(value="Samsung") Samsung
                option(value="Xiaomi") Xiaomi
                option(value="Oppo") Oppo
                option(value="Tecno") Tecno
                option(value="Realme") Realme
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="featured1"
                name="featured"
                value="1"
            )
            label(for="featured1" class="form-check-label") Nổi bật
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="featured0"
                name="featured"
                value="0"
                checked
            )
            label(for="featured0" class="form-check-label") Không
        div(class="form-group")
            label(for="desc") Mô tả
                span(style="color:red; margin-left:2px") *
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
            )
        div(class="form-wrap")
            div(class="form-group width-input")
                label(for="price") Giá
                    span(style="color:red; margin-left:2px") *
                input(
                    type="number"
                    class="form-control"
                    id="price"
                    name="price"
                    value="0"
                    min="0"
                )
            div(class="form-group width-input")
                label(for="discount") % Giảm giá
                    span(style="color:red; margin-left:2px") *
                input(
                    type="number"
                    class="form-control"
                    id="discount"
                    name="discountPercentage"
                    value="0"
                    min="0"
                )
            div(class="form-group width-input")
                label(for="stock") Số lượng
                    span(style="color:red; margin-left:2px") *
                input(
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    value="0"
                    min="0"
                )
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
                span(style="color:red; margin-left:2px") *
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                upload-image-input
            )
            img(
                src=""
                upload-image-preview
                class="image-preview"
            )
            button(
                type="button"
                class="close hidden-close"
            ) X
        div(class="form-group width-input")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
            )
            label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
        

