extends ../../layouts/default.pug

block main 
    h2(class="mb-4") Cập nhật tài khoản

    form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-wrap")
            div(class="form-group width-input-50")
                label(for="fullName") Họ tên 
                    span(style="color: red") *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required 
                    value=data.fullName
                )
            div(class="form-group width-input-50")
                label(for="email") Email 
                    span(style="color: red") *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                    value=data.email
                )
        div(class="form-wrap")
            div(class="form-group width-input-50")
                label(for="password") Mật khẩu 
                    span(style="color: red") *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            div(class="form-group width-input-50")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=data.phone
                )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=data.avatar
                class="image-preview"
                upload-image-preview
            )
            button(
                type="button"
                class="close hidden-close"
            ) X
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(data.status === "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked=(data.status === "inactive" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    