extends ../../layouts/default.pug 

block main 
    if(data.fullName) 
        h2(class="mb-4") Thông tin tài khoản: #{data.fullName} 

    if(data.email) 
        div(class="mb-4") Email: <b>#{data.email}</b>

    if(data.phone) 
        div(class="mb-4") Điện thoại: <b>#{data.phone}</b>

    if(data.avatar) 
        div(class="mb-4")
            img(
                src=data.avatar
                style="width: 100px"
            )
    if(data.status)
        div(class="mb-4")
            span Trạng thái: 
            if (data.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động  
    a(
        href=`${prefixAdmin}/accounts/edit/${data.id}`
        class="btn btn-warning"
    ) Chỉnh sửa
        
